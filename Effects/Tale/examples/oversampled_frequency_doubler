desc:Frequency doubler

import Tale/oversampler.jsfx-inc
import Tale/rc_filter.jsfx-inc

@init

pdc_bot_ch = 0; pdc_top_ch = 2;
pdc_delay = 3;

dc.rc_setf(20);

@sample

mono = 0.5 * (spl0 + spl1);

os.os_up2(mono);
os.y1 = 2 * abs(os.y1);
os.y0 = 2 * abs(os.y0);
spl0 = spl1 = dc.rc_hp(os.os_down2());
